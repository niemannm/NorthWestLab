    ViewBag.Title = "Index";
}

<h2>Login</h2>


<form id="form1" method="post" action="/Customers/Login" class="form-group">
    <div>
        <label for="Username">Username</label>
    </div>
    <div>
        <input name="Username" type="text" class="form-control" />
    </div>
    <br />
    <div>
        <label for="Password">Password</label>
